@model JobSearch.Models.DisplayAllnSearch
@{
    ViewBag.Title = "DisplayAllJob_Load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Jobs</h2>


<div>
    @using (Html.BeginForm("SearchJob_Click", "DisplayAllJob", FormMethod.Post))
            {
                <table>
                    <tr>
                        <td><label>JobName</label></td>
                        <td>@Html.TextBoxFor(m => m.insertse.JobName)</td>

                        <td><label>Skills</label></td>
                        <td>@Html.TextBoxFor(m => m.insertse.RequiredSkill)</td>

                        <td><label>Location</label></td>
                        <td>@Html.TextBoxFor(m => m.insertse.Location)</td>

                        <td><input type="submit" value="Search"/></td>
                    </tr>
                </table>
            }
    </div>

<div>
    @using (Html.BeginForm("DisplayAllJob_Load", "DisplayAllJob", FormMethod.Get))
    {
        if (Model != null)
        {
            if (Model.selectjob != null && Model.selectjob.Count != 0)
            {
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.JobName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.Vacancy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.RequiredSkill)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.Experience)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.Qualification)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.Salary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.Location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.EndDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.JobStatus)
                        </th>
                    </tr>

                    @foreach (var item in Model.selectjob)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Vacancy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RequiredSkill)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Experience)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Qualification)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Salary)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobStatus)
                            </td>

                            <td>
                                @Html.ActionLink("Apply Now", "ApplyJob_Load", "ApplyJob", new { cid = item.CId, jid = item.JobId }, null)
                               
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <script>
                    alert('No matching jobs found');
                </script>
            }
        }
    }
    <div>
        @Html.ActionLink("Back to Home", "UserHome","UserLogin")
    </div>
</div>
